{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier cette catégorie {% endblock %}

{% block description %}Modifier cette catégorie de la liste {% endblock %}

{% block keywords %}   
        <meta name="keywords" content="Modifier, catégorie ">
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier catégorie</h1> 

    <div class="container mt-5">
            <div class="row">
                <div class="col-md-6 mx-auto">
                 {{ form_start(categoryForm) }}
                    <div class="mb-3">
                        <label for="category_form_name">Nom: </label>
                        <div class="text-danger">{{form_errors(categoryForm.name)}}</div>
                        {{form_widget(categoryForm.name, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div>
                        <input type="submit" class="btn btn-primary shadow" valeur="Modifier">
                    </div>
                {{ form_end(categoryForm) }}
                    </div>
            </div>
     </div>

{% endblock %}
